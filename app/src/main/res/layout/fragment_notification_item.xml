<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x3"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/x3"
        app:cardElevation="@dimen/x5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/viewColor"
                android:layout_width="@dimen/x3"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_item"
                android:background="@color/red" />

            <RelativeLayout
                android:id="@+id/rl_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="@dimen/x80"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ll_data"
                    android:layout_marginBottom="@dimen/x3"
                    app:cardElevation="@dimen/x5">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_02" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x8"
                    android:layout_toEndOf="@+id/cv_image"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/x3">

                    <com.app.salonbeaute.ui.views.AnyTextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking No. BMG678454"
                        android:textColor="@color/app_text_black"
                        android:textSize="@dimen/x14"
                        app:typeface="@string/font_normal" />

                    <com.app.salonbeaute.ui.views.AnyTextView
                        android:id="@+id/txtDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3"
                        android:text="Lorem ipsum dolor sit amet."
                        android:textColor="@color/app_red_dark"
                        android:textSize="@dimen/x11"
                        app:typeface="@string/font_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x2"
                        android:orientation="horizontal">

                        <com.app.salonbeaute.ui.views.AnyTextView
                            android:id="@+id/placedOn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/placed_on"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/x9"
                            app:typeface="@string/font_normal" />

                        <com.app.salonbeaute.ui.views.AnyTextView
                            android:id="@+id/txtPlacedOn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x5"
                            android:layout_weight="1"
                            android:text="July,02 2018"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/x9"
                            app:typeface="@string/font_normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x3"
                        android:orientation="horizontal">


                        <com.app.salonbeaute.ui.views.AnyTextView
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/reservation_date"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/x9"
                            app:typeface="@string/font_normal" />

                        <com.app.salonbeaute.ui.views.AnyTextView
                            android:id="@+id/txtDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x5"
                            android:layout_weight="1"
                            android:text="July,12 2018"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/x9"
                            app:typeface="@string/font_normal" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>