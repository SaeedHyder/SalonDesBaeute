<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.app.salonbeaute.ui.views.AnyEditTextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginBottom="@dimen/x15"
                    android:background="@drawable/input_field1"
                    android:hint="@string/email_address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/x15"
                    android:paddingStart="@dimen/x25"
                    android:textColor="@color/app_text_color_login"
                    android:textColorHint="@color/app_text_color_login"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginBottom="@dimen/x15"
                    android:background="@drawable/input_field1"
                    android:orientation="horizontal">

                    <com.app.salonbeaute.ui.views.AnyEditTextView
                        android:id="@+id/txt_password"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x40"
                        android:layout_weight="0.9"
                        android:background="@color/transparent"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/x15"
                        android:paddingStart="@dimen/x25"
                        android:textColor="@color/app_text_color_login"
                        android:textColorHint="@color/app_text_color_login"
                        android:textSize="@dimen/x14"

                        app:typeface="@string/font_normal" />

                    <CheckBox
                        android:id="@+id/checkbox_show_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:button="@drawable/password_botton_eye" />

                </LinearLayout>

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/x15"
                    android:background="@drawable/rounded_red_button"
                    android:text="@string/sign_in"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/x15"
                android:orientation="horizontal">

                <com.app.salonbeaute.ui.views.AnyTextView
                    android:id="@+id/txt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="New User?Signup"
                    android:textColor="@color/app_text_color_login"
                    app:typeface="@string/font_normal" />

                <com.app.salonbeaute.ui.views.AnyTextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/forgot_password"
                    android:textColor="@color/app_text_color_login"
                    app:typeface="@string/font_normal" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/x10"
                android:paddingBottom="@dimen/x20"
                android:background="@drawable/connect_bg"
           >

                <LinearLayout
                    android:id="@+id/ll_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/x90"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@color/line_color" />

                    <com.app.salonbeaute.ui.views.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/or_connect_with"
                        android:textColor="@color/white"
                        app:typeface="@string/font_normal" />

                    <View
                        android:layout_width="@dimen/x90"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/x5"
                        android:background="@color/line_color" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_below="@+id/ll_connect"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginTop="@dimen/x15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.app.salonbeaute.ui.views.AnyTextView
                        android:id="@+id/btn_facebook"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_transparent_button"
                        android:drawableLeft="@drawable/facebook_icon1"

                        android:gravity="center"
                        android:paddingLeft="@dimen/x12"
                        android:paddingRight="@dimen/x12"
                        android:text="Facebook"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_bold" />



                    <com.app.salonbeaute.ui.views.AnyTextView
                        android:id="@+id/btn_google"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_transparent_button"
                        android:drawableLeft="@drawable/googleplus_icon"

                        android:gravity="center"
                        android:paddingLeft="@dimen/x12"
                        android:paddingRight="@dimen/x12"
                        android:text="Google"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x15"
                        app:typeface="@string/font_bold" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>