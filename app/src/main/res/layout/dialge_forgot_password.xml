<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x280"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_icon1" />

        <com.app.salonbeaute.ui.views.AnyTextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="@string/thank_you"
            android:textColor="@color/app_red"
            android:textSize="@dimen/x17"
            app:typeface="@string/font_bold" />

        <com.app.salonbeaute.ui.views.AnyTextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:gravity="center"
            android:text="@string/an_email_has_been_sent_to_your_account_with_password_reset_link"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/x13"
            app:typeface="@string/font_normal" />

        <Button
            android:id="@+id/bn_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x15"
            android:background="@drawable/rounded_red_button"
            android:paddingEnd="@dimen/x40"
            android:paddingStart="@dimen/x40"
            android:text="@string/back_to_sign_in"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />


    </LinearLayout>


</LinearLayout>