<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x15"
            android:padding="@dimen/x15"
            android:src="@drawable/back" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <com.app.salonbeaute.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:alpha="0.9"
                android:gravity="center"
                android:text="@string/enter_the_code_we_sent_to"
                android:textColor="@color/white"
                android:textSize="@dimen/x20"
                app:typeface="@string/font_normal" />

            <com.app.salonbeaute.ui.views.AnyTextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x25"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="start"
                android:text="+923335656225"
                android:textColor="@color/app_text_color_login"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.app.salonbeaute.ui.views.PinEntryEditText
                    android:id="@+id/txt_pin_entry"
                    android:layout_width="@dimen/x300"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/x20"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:focusable="true"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingBottom="@dimen/x10"
                    android:paddingTop="@dimen/x50"
                    android:textColor="@color/app_text_color_login"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:pinLineColors="@color/transparent"
                    app:pinBackgroundDrawable="@drawable/input_field_down"
                    app:pinTextBottomPadding="@dimen/x20"
                   />


                <Button
                    android:id="@+id/verifyButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/x15"
                    android:background="@drawable/rounded_red_button"
                    android:text="@string/verify"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <com.app.salonbeaute.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:text="@string/a_verification_code_has_been_sent_to_your_mobile_phone"
                android:textColor="@color/app_text_color_login"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.app.salonbeaute.ui.views.AnyTextView
                android:id="@+id/btn_resend_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x25"
                android:layout_marginEnd="@dimen/x25"
                android:layout_marginStart="@dimen/x25"
                android:layout_marginTop="@dimen/x5"
                android:alpha="0.7"
                android:gravity="center"
                android:text="@string/resend_verification_code"
                android:textColor="@color/app_red"
                android:textSize="@dimen/x13"
                app:typeface="@string/font_normal" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>