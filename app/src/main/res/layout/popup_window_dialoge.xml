<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/x25"
    android:layout_marginStart="@dimen/x15">


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/x5"
    app:cardElevation="@dimen/x8"
    android:layout_margin="@dimen/x5"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.app.salonbeaute.ui.views.AnyTextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x10"
            android:drawableStart="@drawable/pencil_icon"
            android:padding="@dimen/x7"
            android:text="Edit"
            android:textColor="@color/app_red_dark"
            android:textSize="@dimen/x11"
            app:typeface="@string/font_normal" />


        <com.app.salonbeaute.ui.views.AnyTextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x10"
            android:drawableStart="@drawable/trash_icon"
            android:padding="@dimen/x7"
            android:text="Delete"
            android:textSize="@dimen/x11"
            android:textColor="@color/text_color"
            app:typeface="@string/font_normal" />
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>






