<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:project="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/x3"
        app:cardElevation="@dimen/x2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10">

            <RelativeLayout
                android:id="@+id/rl_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_date_box" />

            </RelativeLayout>

            <com.app.salonbeaute.ui.views.AnyTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x5"
                android:layout_toEndOf="@+id/rl_calendar"
                android:text="Sabs The Salon"
                android:textColor="@color/app_red_dark"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.salonbeaute.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginStart="@dimen/x5"
                android:layout_toEndOf="@+id/rl_calendar"
                android:text="Hair Cutting &amp; Color"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />

            <com.app.salonbeaute.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl_calendar"
                android:layout_marginStart="@dimen/x5"
                android:layout_toEndOf="@+id/rl_calendar"
                android:text="Confirmed"
                android:textColor="@color/app_text_green"
                android:textSize="@dimen/x11"
                app:typeface="@string/font_normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>